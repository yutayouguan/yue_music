<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:activity="ml.yike.yueyin.activity.ScanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/scan_music_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/theme_bg"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


    <LinearLayout
        android:id="@+id/scan_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/scan_music_toolbar"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="horizontal" >

        <ml.yike.yueyin.view.RadarView
            android:id="@+id/radar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:circleColor="#565cd6"
            app:circleNum="4"
            app:flicker="3"
            app:raindropNum="4"
            app:showCross="true"
            app:speed="5"
            app:sweepColor="#565cd6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scan_filter_ll"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/scan_view">
        <CheckBox
            android:id="@+id/scan_filter_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="不扫描60s以下的歌曲"/>
    </LinearLayout>


    <TextView
        android:id="@+id/scan_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/scan_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scan_filter_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:maxLines="1"
        android:ellipsize="end" />

    <Button
        android:id="@+id/start_scan_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/selector_scan_btn"
        android:textColor="@color/colorWhite"
        android:text="开始扫描"/>
</RelativeLayout>
